<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yangyu.springanimationdemo.MainActivity">

    <ImageView
        android:id="@+id/animation_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/normal_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通动画" />

        <Button
            android:id="@+id/spring_animation_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹性动画-interpolator" />

        <Button
            android:id="@+id/spring_animation_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹性动画-rebound" />

        <Button
            android:id="@+id/spring_animation_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="弹性动画-SpringAnimation" />
    </LinearLayout>
</RelativeLayout>
